<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/rl_class_item"
    android:layout_margin="10px"
    android:padding="20px">

    <ImageView
        android:id="@+id/iv_attendanceItem_portrait"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@mipmap/icon_portrait"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_attendanceItem_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/iv_attendanceItem_portrait"
        android:text="张三" />

    <TextView
        android:id="@+id/tv_attendanceItem_student_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/tv_attendanceItem_student_name"
        android:text="男" />

    <TextView
        android:id="@+id/tv_attendanceItem_student_sno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_attendanceItem_student_name"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/iv_attendanceItem_portrait"
        android:text="2013010101" />

    <TextView
        android:id="@+id/tv_attendanceItem_student_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_attendanceItem_student_sno"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/iv_attendanceItem_portrait"
        android:text="软件工程" />

    <TextView
        android:id="@+id/tv_attendanceItem_student_dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_attendanceItem_student_sno"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/tv_attendanceItem_student_major"
        android:text="数计学院" />
    <TextView
        android:id="@+id/item_attendanceItem_attendace_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10px"/>
    <TextView
        android:id="@+id/item_attendanceItem_attendace_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10px"/>
</RelativeLayout>
