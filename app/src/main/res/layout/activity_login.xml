<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical">

    <com.klj.rollcall.view.CircleImageView
        android:id="@+id/iv_login_portrait"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:layout_marginTop="100px"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_portrait" />

    <EditText
        android:id="@+id/et_login_userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"
        android:hint="账号"
        android:paddingLeft="15px"
        android:textColorHint="#ccc"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="15px"
        android:textColorHint="#ccc"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="100px"
        android:background="@drawable/btn_login_selected"
        android:text="登　录"
        android:textColor="#EFFFFF"
        android:textSize="20sp" />

    <!--<TextView
        android:id="@+id/tv_toregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20px"
        android:clickable="true"
        android:text="忘记密码"
        android:textColor="#6F8BB3" />-->
</LinearLayout>