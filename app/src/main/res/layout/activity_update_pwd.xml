<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    <ImageButton
        android:id="@+id/ib_updatePwd_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:background="@color/white"
        android:src="@mipmap/icon_back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="40px"
        android:background="#fff"
        android:text="修改密码" />
    </RelativeLayout>
    <LinearLayout
        style="@style/MineItemLinearLayout"
        android:layout_marginTop="40px">
        <TextView
            style="@style/MineItemTextView"
            android:text="原 密  码：" />
        <EditText
            android:id="@+id/et_updatepwd_oldpwd"
            style="@style/MineItemTextViewValue"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        style="@style/MineItemLinearLayout"
        android:layout_marginTop="40px">
        <TextView
            style="@style/MineItemTextView"
            android:text="新 密  码：" />
        <EditText
            android:id="@+id/et_updatepwd_newpwd"
            style="@style/MineItemTextViewValue"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        style="@style/MineItemLinearLayout"
        android:layout_marginTop="40px">
        <TextView
            style="@style/MineItemTextView"
            android:text="重复密码：" />
        <EditText
            android:id="@+id/et_updatepwd_repwd"
            style="@style/MineItemTextViewValue"
            android:inputType="textPassword" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_updatepwd_updatepwd"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="100px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/btn_login_bg_normal"
        android:text="修改密码"
        android:textColor="#fff"
        android:textSize="50px"
        android:textStyle="bold" />
</LinearLayout>
